<UserControl
    x:Class="BLM.Views.Production.ProductionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BLM.Views.Production"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="645"
    d:DesignWidth="1030"
    FontFamily="Roboto"
    FontSize="22"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="White" />
        </Grid.Background>
        <Grid>
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource 3}" />
            </Grid.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnPending"
                    Margin="0"
                    Background="{Binding brushRequest}"
                    BorderBrush="{x:Null}"
                    Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="2" Source="/BLM;component/Resources/Icons/icons8-wait.png" />
                        <Label
                            VerticalContentAlignment="Center"
                            Content="Pending"
                            Foreground="White" />
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnProcessing"
                    Grid.Column="1"
                    Margin="0"
                    Background="{Binding brushProcessing}"
                    BorderBrush="{x:Null}"
                    Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="2" Source="/BLM;component/Resources/Icons/icons8-copy-production-order-64.png" />
                        <Label VerticalContentAlignment="Center" Foreground="White">
                            Processing
                        </Label>
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnFinished"
                    Grid.Column="2"
                    Margin="0"
                    Background="{Binding brushFinished}"
                    BorderBrush="{x:Null}"
                    Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="0" Source="/BLM;component/Resources/Icons/icons8-product.png" />
                        <Label VerticalContentAlignment="Center" Foreground="White">
                            Finished
                        </Label>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Margin="0">
                <StackPanel
                    Margin="5"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBox
                        x:Name="txtSearch"
                        Width="400"
                        VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style xmlns:sys="clr-namespace:System;assembly=mscorlib" TargetType="TextBox">
                                <Style.Resources>
                                    <VisualBrush
                                        x:Key="CueBannerBrush"
                                        AlignmentX="Left"
                                        AlignmentY="Center"
                                        Stretch="None">
                                        <VisualBrush.Visual>
                                            <Label
                                                Content="Search"
                                                FontFamily="Roboto"
                                                FontSize="20"
                                                Foreground="LightGray" />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Style.Resources>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="Text" Value="{x:Null}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button
                        x:Name="btnProceed"
                        Margin="5,0"
                        BorderBrush="{x:Null}"
                        Foreground="White"
                        Visibility="{Binding btnProceedVisibility}">
                        <Button.Background>
                            <SolidColorBrush Color="{DynamicResource 1}" />
                        </Button.Background>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="0" Source="/BLM;component/Resources/Icons/icons8-checked-128.png" />
                            <Label
                                x:Name="lblButton"
                                Content="Proceed"
                                Foreground="White" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <DataGrid
                    x:Name="productionGrid"
                    Margin="5,0,5,5"
                    HorizontalAlignment="Stretch"
                    AlternatingRowBackground="LightGray"
                    AlternationCount="2"
                    AutoGeneratingColumn="productionGrid_AutoGeneratingColumn"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CanUserAddRows="False"
                    ColumnWidth="Auto"
                    FontSize="16"
                    Foreground="Black"
                    IsReadOnly="True"
                    ItemsSource="{Binding productionGridSource}"
                    RowBackground="White"
                    SelectedItem="{Binding productionGridSelectedItem}"
                    SelectionMode="Single">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="White" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>