<UserControl
    x:Class="BLM.Views.Production.ProductionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:BLM.Views.Production"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="645"
    d:DesignWidth="1030"
    FontFamily="Roboto"
    FontSize="22"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.Background>
            <SolidColorBrush Color="White" />
        </Grid.Background>
        <Grid>
            <Grid.Background>
                <SolidColorBrush Color="{DynamicResource 3}" />
            </Grid.Background>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="btnPending"
                    Margin="10,0"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="2" Source="/BLM;component/Resources/Icons/icons8-wait.png" />
                        <Label VerticalContentAlignment="Center" Foreground="White">
                            Pending
                        </Label>
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnProcessing"
                    Grid.Column="1"
                    Margin="10,0"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="2" Source="/BLM;component/Resources/Icons/icons8-copy-production-order-64.png" />
                        <Label VerticalContentAlignment="Center" Foreground="White">
                            Processing
                        </Label>
                    </StackPanel>
                </Button>
                <Button
                    x:Name="btnFinished"
                    Grid.Column="2"
                    Margin="10,0"
                    Background="{x:Null}"
                    BorderBrush="{x:Null}"
                    Foreground="White">
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="0" Source="/BLM;component/Resources/Icons/icons8-product.png" />
                        <Label VerticalContentAlignment="Center" Foreground="White">
                            Finished
                        </Label>
                    </StackPanel>
                </Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Label
                x:Name="s3"
                Margin="5,4.6,5,4.8"
                FontSize="24"
                Content="Product Name" />
            <Label
                x:Name="s2"
                Grid.Row="1"
                Margin="5,4.6,5,4.8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="24"
                Content="Theoretical Yield" />
            <Label
                x:Name="s1"
                Grid.Column="2"
                Margin="5,4.6,5,4.8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="24"
                Content="Status" />
            <TextBox
                x:Name="txtProductName"
                Grid.Column="1"
                Height="40"
                IsReadOnly="True"
                Margin="5,4.6,5,4.8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
              
                TextWrapping="Wrap" FontSize="26"/>
            <TextBox
                x:Name="txtStatus"
                Grid.Column="3"
                Height="40"
                IsReadOnly="True"
                Margin="5,4.6,5,4.8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                TextWrapping="Wrap" FontSize="26"/>
            <TextBox
                x:Name="txtTheoreticalYield"
                Grid.Column="1"
                Height="40"
                IsReadOnly="True"
                Margin="5,4.6,5,4.8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
          
                TextWrapping="Wrap" FontSize="26" Grid.Row="1"/>

            <TextBox
                x:Name="txtRFID"
                Grid.Column="3"
                  IsReadOnly="True"
                Height="40"
                Margin="5,4.6,5,4.8"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                TextWrapping="Wrap" FontSize="26" Grid.Row="1"/>
        </Grid>

        <Grid Grid.Row="3" Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid>
                <StackPanel
                    Margin="5"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBox
                        x:Name="txtSearch"
                        Width="300"
                        VerticalContentAlignment="Center">
                        <TextBox.Style>
                            <Style xmlns:sys="clr-namespace:System;assembly=mscorlib" TargetType="TextBox">
                                <Style.Resources>
                                    <VisualBrush
                                        x:Key="CueBannerBrush"
                                        AlignmentX="Left"
                                        AlignmentY="Center"
                                        Stretch="None">
                                        <VisualBrush.Visual>
                                            <Label
                                                Content="Search"
                                                FontFamily="Roboto"
                                                FontSize="20"
                                                Foreground="LightGray" />
                                        </VisualBrush.Visual>
                                    </VisualBrush>
                                </Style.Resources>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="Text" Value="{x:Null}">
                                        <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsKeyboardFocused" Value="True">
                                        <Setter Property="Background" Value="White" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <ComboBox Width="200" Margin="5,0" />
                    <Button
                        x:Name="btnRefresh"
                        Margin="5,0"
                        BorderBrush="{x:Null}"
                        Foreground="White">
                        <Button.Background>
                            <SolidColorBrush Color="{DynamicResource 1}" />
                        </Button.Background>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="5" Source="/BLM;component/Resources/Icons/icons8-refresh-104.png" />
                            <Label Foreground="White">
                                Refresh
                            </Label>
                        </StackPanel>
                    </Button>
                    <Button
                        x:Name="btnFifth"
                        Margin="5,0"
                        BorderBrush="{x:Null}"
                        Foreground="White">
                        <Button.Background>
                            <SolidColorBrush Color="{DynamicResource 1}" />
                        </Button.Background>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="5,0" Source="/BLM;component/Resources/Icons/icons8-export-100.png" />
                            <Label Margin="5,0" Foreground="White">
                                Export
                            </Label>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <Button
                    x:Name="btnCreate"
                    Height="40"
                    Margin="5,0"
                    HorizontalAlignment="Right"
                    BorderBrush="{x:Null}"
                    Foreground="White">
                    <Button.Background>
                        <SolidColorBrush Color="{DynamicResource 1}" />
                    </Button.Background>
                    <StackPanel Orientation="Horizontal">
                        <Image
                            Width="35"
                            Height="35"
                            Margin="5,0"
                            Source="/BLM;component/Resources/Icons/icons8-create-64.png" />
                        <Label Margin="5,0" Foreground="White">Receive RawMat</Label>
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <DataGrid
                    x:Name="productionGrid"
                    Margin="10,10,0.4,-0.2"
                    HorizontalAlignment="Stretch"
                    cal:Message.Attach="[Event SelectionChanged] = [Action print]"
                    AlternatingRowBackground="LightGray"
                    AlternationCount="2"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CanUserAddRows="False"
                    ColumnWidth="*"
                    FontSize="16"
                    Foreground="Black"
                    IsReadOnly="True"
                    ItemsSource="{Binding productionGridSource}"
                    RowBackground="White"
                    SelectedItem="{Binding productionGridSelectedItem}"
                    SelectionMode="Single" AutoGeneratingColumn="productionGrid_AutoGeneratingColumn">
                    <DataGrid.Resources>
                        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="White" />
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
